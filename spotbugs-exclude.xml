<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude Lombok-generated inner classes -->
    <Match>
        <Class name="~.*\$.*"/>
    </Match>

    <!-- Exclude Lombok-generated equals and hashCode methods in entity classes -->
    <Match>
        <Package name="~edens\.zac\.portfolio\.backend\.entity.*"/>
        <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS,HE_EQUALS_USE_HASHCODE,HE_HASHCODE_USE_OBJECT_EQUALS"/>
    </Match>

    <!-- Exclude field initialization warnings for Spring dependency injection with Lombok @RequiredArgsConstructor -->
    <Match>
        <Package name="~edens\.zac\.portfolio\.backend\..*"/>
        <Bug pattern="UWF_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR"/>
    </Match>

    <!-- Exclude NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE for Optional usage patterns -->
    <Match>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>

    <!-- Exclude serialization warnings for JPA entities (not used for serialization) -->
    <Match>
        <Package name="~edens\.zac\.portfolio\.backend\.entity.*"/>
        <Bug pattern="SE_BAD_FIELD,SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- Exclude path traversal false positives for S3 key generation -->
    <Match>
        <Class name="~edens\.zac\.portfolio\.backend\.services\..*"/>
        <Method name="~.*s3.*|.*upload.*|.*download.*"/>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>
</FindBugsFilter>
